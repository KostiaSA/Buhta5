@model SchemaTableColumnEditModel

<div class="modal" data-width="1000" tabindex="-1" role="dialog">
    @*<div class="modal-dialog">
        <div class="modal-content">*@
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Редактирование колонки</h4>
    </div>
    <div class="modal-body">
        <form role="form" class="form-horizontal">
            <div class="row">

                @Html.bsInput(s =>
               {
                   s.Bind_Value_To_String(nameof(Model.Column) + "." + nameof(Model.Column.Name));
                   s.Label = "Имя колонки";
                   s.AddStyle("max-width", "400px");
               })
                @Html.bsInput(s =>
               {
                   s.Bind_Value_To_String(nameof(Model.Column) + "." + nameof(Model.Column.Description));
                   s.Label = "Описание";
                   //s.AddStyle("max-width", "400px");
               })

                @Html.bsInput(input =>
               {
                   input.Type = bsInputType.List;
                   input.Bind_Value_To_RolesList(nameof(Model.Column) + "." + nameof(Model.Column.ColumnRoles), new Колонка_ColumnRole());
                   input.Label = "Роли";
               })


                @Html.bsInput(s =>
               {
                   //s.Type = bsInputType.Checkbox;
                   s.Bind_Value_To_Boolean(nameof(Model.Column) + "." + nameof(Model.Column.IsNotNullable));
                   s.Label = "Обязательное (NOT NULL)";
               })






            </div>
        </form>

    </div>
    <div class="modal-footer">
        @Html.bsButton(button =>
   {
       button.Text = "Ok";
       button.AddStyle("min-width", "70px");
       button.ButtonStyle = bsButtonStyle.Success;
       button.Bind_Disabled(() => !Model.GetNeedSave());
       button.Bind_OnClick(Model.SaveButtonClick);
   })
        @Html.bsButton(button =>
   {
       button.Text = "Отмена";
       button.ButtonStyle = bsButtonStyle.Default;
       button.Bind_OnClick(Model.CancelButtonClick);
   })

    </div>
    @*</div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->*@
</div><!-- /.modal -->