@model MessageDialogModel

<div class="modal" data-width="600" tabindex="-1" role="dialog">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">@Model.TitleHtml</h4>
    </div>
    <div class="modal-body" style="color:#418BCA">
        @Model.MessageHtml
    </div>
    <div class="modal-footer">
        @Html.bsMessageDialogOkButton(button =>   { button.Text = "Ok"; button.ButtonStyle = bsButtonStyle.Primary; })
        @Html.bsMessageDialogCancelButton(button =>   { button.Text = "Отмена"; })
    </div>
</div>